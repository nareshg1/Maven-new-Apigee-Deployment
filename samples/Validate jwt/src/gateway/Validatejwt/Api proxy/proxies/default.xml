<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response>
            <Step>
                <Name>Decode-JWT</Name>
            </Step>
            <Step>
                <Name>JavaScript-ToFilterPublicKey</Name>
            </Step>
            <Step>
                <Name>AssignMessage-AddPublicKey</Name>
            </Step>
            <Step>
                <Name>KVM-AddPublicKeyInEnv</Name>
            </Step>
            <Step>
                <Name>KVM-GetPublicKey</Name>
            </Step>
            <Step>
                <Name>Validate-JWT-RS256</Name>
            </Step>
        </Response>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows/>
    <HTTPProxyConnection>
        <BasePath>/validatejwt</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>evd_secure</VirtualHost>
        <VirtualHost>evd_default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>